<horizontal>
	<!-- Items list -->
	<group>
		<text>Items:</text>
		<list name="items_list" w="200" />
		<button>Create</button>
	</group>

	<!-- Edit item -->
	<group>
		<text>Inspector</text>
		<group name="item_edit">
			<horizontal>
				<text>Icon</text>
				<img name="icon" />
				<button name="icon_change">Select</button>
				<popup name="icon_popup" visible="0">
					<text>Test text</text>
				</popup>
			</horizontal>

			<horizontal>
				<text>Title</text>
				<input name="title" />
			</horizontal>

			<horizontal>
				<text>Type</text>
				<combo name="type" />
			</horizontal>

			<horizontal>
				<text>Price</text>
				<input name="price" variant="number" />
			</horizontal>

			<horizontal>
				<text>Weight</text>
				<input name="weight" variant="number" />
			</horizontal>

			<text>Description</text>
			<textarea name="desc" height="50" />
		</group>
	</group>
</horizontal>