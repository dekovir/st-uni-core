<horizontal>
	<!-- Items list -->
	<group>
		<text>Items:</text>
		<list name="items_list" w="200" />
		<button>Create</button>
	</group>

	<!-- Edit item -->
	<group>
		<text>Inspector</text>
		<group name="item_edit">

			<horizontal>
				<text>Title</text>
				<input name="title" />
			</horizontal>

			<horizontal>
				<text>Type</text>
				<combo name="type" />
			</horizontal>

			<horizontal>
				<text>Price</text>
				<input variant="number" name="price" />
			</horizontal>

			<horizontal>
				<text>Weight</text>
				<input variant="number" name="weight" />
			</horizontal>

		</group>
	</group>
</horizontal>